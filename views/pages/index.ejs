<%- include('header') %>

<form action="/" method="post" class="ui form">
    <div class="field">
        <label for="message">Message</label>
        <textarea name="message" id="message"></textarea>
    </div>
    <button type="submit" class="ui blue labeled submit icon button">
        <i class="icon edit"></i>Envoyer
    </button>
</form>

<% if (locals.messages) { %>
<div class="ui comments">
    <span class="ui dividing header">Derniers messages</span>
    <% messages.forEach((message) => { %>
       <div class="comment">
           <a class="avatar" href="/message/<%= message.id %>">
               <img src="https://randomuser.me/api/portraits/men/27.jpg">
           </a>
           <div class="content">
               <div class="metadata">
                   <div class="date"><%= message.created_at.fromNow() %></div>
               </div>
               <div class="text">
                   <%= message.content %>
               </div>
           </div>
       </div>
    <% }) %>
</div>
<% } %>

<%- include('footer') %>